<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/tView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/title_from"
            android:layout_marginBottom="5dip" >
        </TextView>

        <TextView
            android:id="@+id/tViewFrom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tView1"
            android:layout_marginBottom="5dip" >
        </TextView>

        <TextView
            android:id="@+id/tView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/title_contract"
            android:layout_below="@+id/tViewFrom"
            android:layout_marginBottom="5dip" >
        </TextView>

        <TextView
            android:id="@+id/tViewContract"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tView3" 
            android:layout_marginBottom="5dip" >
        </TextView>
        
        <TextView
            android:id="@+id/tView4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
			android:text="@string/title_memo"            
            android:layout_below="@+id/tViewContract"
            android:layout_marginBottom="5dip" >
        </TextView>
        
        <TextView
            android:id="@+id/titleMemo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tView3" 
            android:layout_marginBottom="5dip" >
        </TextView>        
    </RelativeLayout>
 </ScrollView>