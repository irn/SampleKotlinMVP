<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip" >


    <TextView
        android:id="@+id/tContractFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_contract_name" />

    <TextView
        android:id="@+id/statusContractFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/eTextContractFullName">
    </TextView>

    <EditText
        android:id="@+id/eTextContractFullName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tContractFullName"
        android:text="Test ContractNAME"
        android:ems="10"
        android:inputType="textNoSuggestions"
        android:nextFocusDown="@+id/eTextContractShortName"
        android:imeOptions="actionNext" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tContractShortName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_contract_short"
        android:layout_below="@+id/eTextContractFullName"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/statusContractShortName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/eTextContractShortName">
    </TextView>

    <EditText
        android:id="@+id/eTextContractShortName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tContractShortName"
        android:text="SHORT"
        android:inputType="textNoSuggestions"
        android:imeOptions="actionDone" >
    </EditText>



    <Button
        android:id="@+id/btnNext"
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:onClick="onNextButtonClicked"
        android:text="@string/button_next"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/textStatus"
	android:textStyle="bold|italic"
	android:textColor="#ffff00"
	android:typeface="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="">
    </TextView>

</RelativeLayout>
